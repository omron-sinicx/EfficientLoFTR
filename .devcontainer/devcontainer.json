{
  "name": "Research-Project-Dev-Env",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "USER_UID": "${localEnv:UID:1000}",
      "USER_GID": "${localEnv:GID:1000}"
    }
  },
  "runArgs": [
    "--gpus=all",
    "--shm-size=64gb",
    "--ulimit", "memlock=-1",
    "--ulimit", "stack=67108864"
  ],
  "mounts": [
    "source=${localEnv:HOME}/.config/gh,target=/home/vscode/.config/gh,type=bind,consistency=cached",
    "source=/data/share/datasets/LoFTR,target=/data/LoFTR,type=bind,consistency=cached"
  ],
  "remoteUser": "vscode",
  "updateRemoteUserUID": true,
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  },
  "postCreateCommand": "mkdir -p ~/.claude && echo '{\"autoApprove\": true, \"dangerouslyIgnoreReadOnly\": true}' > ~/.claude/config.json"
}
